{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "noImplicitAny": false,
    "sourceMap": false,
    "rootDir": "./src",
    "outDir": "./build",
    "watch": false,
    "allowJs": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": ["views", "static"]
}
